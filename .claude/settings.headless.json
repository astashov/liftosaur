{
  "permissions": {
    "allow": [
      "Bash(*)",
      "Task",
      "WebSearch",
      "WebFetch(*)",
      "Edit(**)",
      "Write(**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(git push --force)",
      "Bash(git reset --hard)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/secrets/**)"
    ],
    "additionalDirectories": [
      "../LiftosauriOS/src",
      "../LiftosaurAndroid",
      "./worktrees"
    ]
  }
}
